from sklearn.linear_model import LinearRegression

# Datos de entrenamiento
X = [[1], [2], [3], [4], [5]]
Y = [2, 4, 5, 4, 5]

# Crear una regresi√≥n lineal
regression = LinearRegression().fit(X, Y)

# Hacer predicciones
print(regression.predict([[6]])) # [5.6]
print(regression.predict([[2.5]])) # [3.5]
